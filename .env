# PAVEL Environment Configuration
# Default app: inDriver (https://play.google.com/store/apps/details?id=sinet.startup.inDriver&hl=en)
PAVEL_DEFAULT_APP_ID=sinet.startup.inDriver

# MongoDB Configuration (Docker)
PAVEL_DB_URI=mongodb://localhost:27017
PAVEL_DB_NAME=gp
PAVEL_COLLECTION_REVIEWS=reviews
PAVEL_COLLECTION_CLUSTERS=clusters

# Embedding Model
PAVEL_EMBEDDING_MODEL=intfloat/multilingual-e5-small
PAVEL_EMBEDDING_BATCH_SIZE=32

# Default Locales for multi-language testing
PAVEL_DEFAULT_LOCALES=en,ru,es

# Logging
PAVEL_LOG_LEVEL=INFO

# OpenAI API Configuration
# For production: Use GitHub Secret OPENAI_API_KEY
# For local dev: Replace the placeholder with your actual API key
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE