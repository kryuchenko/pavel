# PAVEL Environment Configuration
# Default app: inDrive
PAVEL_DEFAULT_APP_ID=sinet.startup.inDriver

# MongoDB Configuration (Docker)
PAVEL_DB_URI=mongodb://localhost:27017
PAVEL_DB_NAME=gp
PAVEL_COLLECTION_REVIEWS=reviews
PAVEL_COLLECTION_CLUSTERS=clusters

# Google Play API (replace with actual credentials)
GOOGLE_PLAY_DEVELOPER_EMAIL=your-email@example.com
GOOGLE_PLAY_KEY_FILE_PATH=./secrets/google-play-key.json
GOOGLE_PLAY_PACKAGE_NAME=sinet.startup.inDriver

# Logging
PAVEL_LOG_LEVEL=INFO
PAVEL_LOG_FORMAT=json
PAVEL_LOG_FILE=./logs/pavel.log

# Pipeline Configuration
PAVEL_BATCH_SIZE=100
PAVEL_RATE_LIMIT_REQUESTS=60
PAVEL_RATE_LIMIT_PERIOD=60
PAVEL_RETRY_ATTEMPTS=3
PAVEL_RETRY_BACKOFF=2

# Default Locales (comma-separated)
PAVEL_DEFAULT_LOCALES=en_US,ru_RU,es_ES,pt_BR,id_ID,kk_KZ

# History Window (days)
PAVEL_HISTORY_WINDOW_DAYS=90

# Embedding Model
PAVEL_EMBEDDING_MODEL=intfloat/multilingual-e5-base
PAVEL_EMBEDDING_BATCH_SIZE=32
PAVEL_EMBEDDING_CACHE_DIR=./models

# API Configuration
PAVEL_API_PORT=8080
PAVEL_API_HOST=0.0.0.0
PAVEL_API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
PAVEL_ENABLE_DEDUPLICATION=true
PAVEL_ENABLE_COMPLAINT_FILTER=true
PAVEL_ENABLE_AUTO_CLUSTERING=true
PAVEL_ENABLE_TREND_ANALYSIS=true

# Monitoring
PAVEL_METRICS_ENABLED=true
PAVEL_METRICS_PORT=9090
PAVEL_HEALTH_CHECK_INTERVAL=30

# OpenAI API Configuration
# For GitHub Actions: Automatically uses GitHub Secret OPENAI_API_KEY
# For local development: Set your API key here (never commit real keys!)
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-proj-...